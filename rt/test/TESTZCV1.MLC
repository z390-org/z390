         TITLE 'TESTZCV1 - DUMP ZCVT PGM FIELDS'

TESTZCV1 SUBENTRY
         WTO   'TESTZCV1 STARTED'
         L     R2,=A(ZCVT)
         USING IHAZCVT,R2
         MVC   DPGM,ZCVTUPGM
         MVC   DIPL,ZCVTIPLP
         WTO   MF=(E,WTOMSG)
         WTO   'TESTZCV1 ENDED OK'
         SUBEXIT
         EQUREGS
WTOMSG   DC    AL2(WTOEND-*,0),C' Z390 PGM='
DPGM     DC    CL8' '
         DC    C' IPL='
DIPL     DC    CL8' '
WTOEND   EQU   *
         ZCVTD
         END